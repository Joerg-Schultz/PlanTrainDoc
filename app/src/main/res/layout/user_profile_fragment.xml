<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.UserProfileFragment">


    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/til_userName">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ti_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/til_userName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/til_dogName">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ti_dogName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dog Name"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Switch
            android:text="Use Click Sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch_clicksound"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_dogName" android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>