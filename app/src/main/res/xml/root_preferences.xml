<PreferenceScreen
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
            app:title="Sound">
        <SwitchPreferenceCompat
                app:key="useClicker"
                app:defaultValue="true"
                app:title="Make Clicker Sound"/>
        <SwitchPreferenceCompat
                app:key="useSpeechforHelper"
                app:defaultValue="true"
                app:title="Use Speech for Helpers"/>
    </PreferenceCategory>

</PreferenceScreen>